<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>ショッピングカート</h1>
    </div>
    <div class="ml-auto">
      <h1>カートを空にする</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
        <% @cart_item.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price%></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal%></td>
            <td>削除</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <%= link_to "買い物を続ける", items_path %>
    </div>
    <div class="ml-auto">
      <table class="table">
        <tbody>
          <tr>
            <td>合計金額</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= link_to "情報入力に進む", orders_new_path %>
    </div>
  </div>
</div>