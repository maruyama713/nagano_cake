<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>ショッピングカート</h1>
    </div>
    <div class="ml-auto">
      <h3><%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, "data-confirm" => "カートを空にしますか?" %></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit '変更' %>
                <% end %></td>
            <td><%= cart_item.subtotal %></td>
                <%# @total +=  cart_item.subtotal %>
            <td><%= link_to '削除', cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <%= link_to "買い物を続ける", items_path %>
    </div>
    <div class="ml-auto">
      <table class="table">
        <tbody>
          <tr>
            <td>合計金額</td>
            <td><%= @total.round.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= link_to "情報入力に進む", orders_new_path %>
    </div>
  </div>
</div>