<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_profile_image(100,100) %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2><%= @item.name %></h2>
        <div>
          <h4><%= @item.introduction %></h4>
        </div>
        <div>
          <h3>￥<%= @item.price %>(税込)</h3>
        </div>

        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit 'カートに入れる' %>
        <% end %>
    </div>
  </div>
</div>