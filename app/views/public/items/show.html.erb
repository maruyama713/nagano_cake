<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h3>画像</h3>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2><%= @item.name %></h2>
        <div>
          <h4><%= @item.introduction %></h4>
        </div>
        <div>
          <h3><%= @item.price %></h3>
        </div>

        <%= form_with  model:  @cart_item do |f| %>
          <%= f.hidden_field :cart_item, :value => "item_id" %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit 'カートに入れる' %>
        <% end %>
    </div>
  </div>
</div>