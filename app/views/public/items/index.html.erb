<div class="container">
  <div class="row">
    <div class="col-4 mt-5">
      <table>
        <tr>
          <td><h1>商品一覧</h1></td>
          <td><h4>(全<%= @items_count %>件)</h4></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12" style="text-align: center;">
      <table style="width: 100%;">
        <% @items.each_slice(4) do |item| %>
        <tr style="display: flex; flex-wrap: wrap;">
          <% item.each do |item| %>
          <td style="flex-basis: 25%;">
            <div class="pt-5 pb-2"><%= image_tag item.get_profile_image(100,100) %></div>
            <div><%= link_to item.name, "/items/#{item.id}" %></div>
            <div>￥<%= item.with_tax_price %></div>
          </td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
    <div class=" col-12 mt-5" style="display: flex; justify-content: center;">
      <%= paginate @items %>
    </div>
  </div>
</div>