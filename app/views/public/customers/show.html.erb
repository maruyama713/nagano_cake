<h1>マイページ</h1>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>登録情報</h1>
        <%= form_with model: @customer do |f| %>
        <span>
          <%= link_to '登録情報編集画面', "/customers/information/edit" %>
        </span>
          <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>氏名</th>
              <th><%= @customer.name %></th>
            </tr>
            <tr>
              <th>カナ</th>
              <th><%= @customer.name_kana %></th>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= @customer.postal_code %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= @customer.address %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= @customer.telephone_number %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= @customer.email %></th>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
<h1>注文履歴</h1>
  <div>
      <%= link_to "一覧を見る", '/orders' %>
  </div>
<% end %>