<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h3 style="background-color: #DCDCDC; text-align: center;">会員情報編集</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto mt-5">
      <%= form_with model:  @customer,url: customers_my_page_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td class="col-3 pl-0">氏名</td>
            <td class="pb-3 pl-5"><%= f.text_field :last_name %></td>
            <td class="pb-3 pl-3"><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="pb-3 pl-5"><%= f.text_field :last_name_kana %></td>
            <td class="pb-3 pl-3"><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td class="pb-3 pl-5"><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td class="pb-3 pl-5" colspan="2"><%= f.text_field :address, size: 70 %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td class="pb-3 pl-5"><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td class="pb-3 pl-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td class="pt-3 pl-5"><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
            <td class="pt-3 pl-4"><%= link_to "退会する", customers_confirmation_path, class: 'btn btn-danger' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
   </div>
  </div>
</div>
