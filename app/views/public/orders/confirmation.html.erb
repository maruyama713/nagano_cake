<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>注文情報確認</h1>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @order_total.round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= number_with_delimiter(@order.billing_amount) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <table>
        <tbody>
          <tr>
            <td><h2>支払方法</h2></td>
            <td><%= @order.method_of_payment_i18n %></td>
          </tr>
          <tr>
            <td><h2>お届け先</h2></td>
            <td>〒<%= @order.postal_code %><%= @order.address %><br>
                <%= @order.address_name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @order, url: orders_thanks_path, method: :post do |f| %>
        <%= f.hidden_field :method_of_payment %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :address_name %>
        <%= f.hidden_field :postage %>
        <%= f.hidden_field :billing_amount %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
  </div>
</div>