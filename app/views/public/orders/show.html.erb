<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>注文履歴詳細</h1>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h3>注文情報</h3>
      <table class="table">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.address_name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.method_of_payment_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>請求情報</h3>
      <table class="table">
        <tr>
          <td>商品合計</td>
          <td><%#= @order_total.round.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= number_with_delimiter(@order.billing_amount) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h3>注文内容</h3>
        <table class="table">
          <thead>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </thead>
          <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
