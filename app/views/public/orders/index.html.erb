<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>注文履歴一覧</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td>〒<%= @order.postal_code %><%= @order.address %><br>
                <%= @order.address_name %></td>
            <td><% @cart_items.each do |cart_item| %>
                  <%= cart_item.item.name %>
                <% end %></td>
            <td><%= number_with_delimiter(@order.billing_amount) %>円</td>
            <td></td>
            <td><%= link_to "表示する", "/orders/#{orders.id}" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>