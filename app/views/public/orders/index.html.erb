<div class="container">
  <div class="row">
    <div class="mr-auto mt-5 mb-5">
      <h3 class="bg-secondary">注文履歴一覧</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered" style="border-width: 2px;">
        <thead class="thead-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>〒<%= order.postal_code %><%= order.address %><br>
                <%= order.address_name %></td>
            <td><% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br>
                <% end %></td>
            <td><%= number_with_delimiter(order.billing_amount) %>円</td>
            <td><%= link_to "表示する", "/orders/#{order.id}" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>