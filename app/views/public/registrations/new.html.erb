<div class="container">
  <div class="row">
    <div class="mr-auto mt-4 mb-4">
      <h3 style="background-color: #DCDCDC;">新規会員登録</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <td class="col-4">名前</td>
            <td class="pb-3 pl-3">(性)<%= f.text_field :last_name %></td>
            <td class="pb-3 pl-3">(名)<%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="pb-3">(セイ)<%= f.text_field :last_name_kana %></td>
            <td class="pb-3">(メイ)<%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td class="pb-3 pl-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td class="pb-3 pl-5"><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td class="pb-3 pl-5" colspan="2"><%= f.text_field :address, size: 70 %></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td class="pb-3 pl-5"><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>パスワード<% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em><% end %></td>
            <td class="pb-3 pl-5"><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td class="pb-3 pl-5"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto mt-3">
      <h3 style="background-color: #DCDCDC;">既に登録済みの方</h3>
        <h5 class="mt-3"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</h5>
    </div>
  </div>
</div>