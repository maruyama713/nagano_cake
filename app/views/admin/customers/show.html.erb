<div class="container">
  <div class="row">
    <div class="col-5 mt-5">
      <h3 style="background-color: #DCDCDC; text-align: center;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-10 mt-5">
      <table>
        <tbody>
          <tr>
            <td class="col-4 pl-0">会員ID</td>
            <td class="pb-3 pl-5"><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td class="pb-3 pl-5"><%= @customer.last_name %></td>
            <td class="pb-3 pl-5"><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="pb-3 pl-5"><%= @customer.last_name_kana %></td>
            <td class="pb-3 pl-5"><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td class="pb-3 pl-5"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td class="pb-3 pl-5"><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td class="pb-3 pl-5"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td class="pb-3 pl-5"><%= @customer.email %></td>
          </tr>
          <tr>
            <td>退会ステータス</td>
            <td class="pb-3 pl-5"><% if @customer.is_deleted %>退会
                                  <% else %><span style="color: green;">有効</span>
                                  <% end %></td>
          </tr>
          <tr>
            <td></td>
            <td class="pb-3 pl-5"><%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>