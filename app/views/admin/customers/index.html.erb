<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>会員一覧</h1>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to "#{customer.last_name} #{customer.first_name}", "admin/customers#{customer.id}" %></td>
            <td><%= customer.email %></td>
            <td>ステータス</td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
