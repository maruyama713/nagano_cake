<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>商品新規登録</h1>
   </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: [:admin, @item] do |f| %>
        <table>
          <tbody>
            <tr>
              <td>商品画像</td>
              <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br></td>
            </tr>
            <tr>
              <td>商品名</td>
              <td><%= f.text_field :name %><br></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= f.text_field :introduction %></td>
            </tr>
            <tr>
              <td>税抜き価格</td>
              <td><%= f.text_field :price %></td>
            </tr>
          </tbody>
        </table>
        <div class="mt-3">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>