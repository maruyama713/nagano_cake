<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>商品新規登録</h1>
   </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: [:admin, @item] do |f| %>
        <table>
          <tbody>
            <tr>
              <th>商品画像</th>
              <th><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br></th>
            </tr>
            <tr>
              <th>商品名</th>
              <th><%= f.text_field :name %><br></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= f.text_field :introduction %></th>
            </tr>
            <tr>
              <th>税抜き価格</th>
              <th><%= f.text_field :price %></th>
            </tr>
          </tbody>
        </table>
        <div class="mt-3">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>