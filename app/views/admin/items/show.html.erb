<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>商品詳細</h1>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_profile_image(100,100) %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table>
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>税込価格<br>
            （税抜き価格）</th>
            <th><%= @item.price %>(<%= @item.price %>)円</th>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する",  edit_admin_item_path %>
    </div>
  </div>
</div>