<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>注文履歴一覧</h1>
   </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), "/admin/orders/#{order.id}" %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><% total_amount = 0 %>
                <% order.order_items.each do |order_item| %>
                  <% total_amount += order_item.amount %>
                <% end %>
                <%= total_amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>