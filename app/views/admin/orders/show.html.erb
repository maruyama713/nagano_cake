<div class="container">
  <div class="row">
    <div class="mr-auto">
      <h1>注文履歴詳細</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mr-auto">
      <table>
        <tr>
          <td>購入者</td>
          <td><%= link_to @customer.last_name @customer.first_name, "admin/customers#{@customer.id}" %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @cart_item.each do |cart_item| %>
          <tr>
            <td><%= @cart_item.name %></td>
            <td><%= (cart_item.item.price * 1.1).floor %></td>
            <td><%= @cart_item.amount %></td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
            <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <table>
        <tr>
          <td>商品合計</td>
          <td></td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>